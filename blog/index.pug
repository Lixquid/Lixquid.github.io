extends /resources/layouts/main/main

block main

	-
		function getOrdinal( num ) {
			const i = num % 10, k = num % 100;
			if ( i == 1 && k != 11 ) return "st";
			if ( i == 2 && k != 12 ) return "nd";
			if ( i == 3 && k != 13 ) return "rd";
			return "th";
		}
		const monthList = [
			"January",
			"February",
			"March",
			"April",
			"May",
			"June",
			"July",
			"August",
			"September",
			"October",
			"November",
			"December"
		];
		function formatDate( date ) {
			return date.getDate() + getOrdinal( date.getDate() )
				+ " " + monthList[ date.getMonth() ]
				+ " " + date.getFullYear();
		}

	each post in posts
		a( href=post.url ).biglist--link
			h2= post.title
			if post.date
				small= formatDate( post.date )
